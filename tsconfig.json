{
  "compilerOptions": {
    "target": "ES2020",
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "module": "nodenext",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "jsx": "react",
    "resolveJsonModule": true
  },
  "include": ["*/game/**/*", "*/ui/**/*", "*/shared/**/*"],
  "exclude": ["**/node_modules", "**/.*/"]
}
